{
  "manifest_version": 2,

  "name": "yify torent",
  "description": "This extension demonstrates a browser action with kittens.",
  "version": "1.0",

  "permissions": [
    "http://www.imdb.com/"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "plugin.html"
  },
  "background" : {
    "scripts": ["js/background/background.js","public/jqmin.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://www.imdb.com/*"],      
      "js": ["public/jqmin.js", "public/jqtmpl.js","js/background/imdbCrawler.js"]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}